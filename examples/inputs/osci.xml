<!-- Only constraint is optional-->
<!-- Miner can be single or cluster-->
<input>
    <miner>single</miner>
    <prds>
        <prd>p1:1::</prd>
        <prd>p2:1::</prd>
        <prd>p3:1::</prd>
        <prd>p4:1::</prd>
    </prds>
    <bltls>
        <bltl>p1</bltl>
        <bltl>F[k1](p2 & F[k2](p3 & F[k3]p4))</bltl>
    </bltls>
    <constraints>
    <constraint>p2>p3</constraint>
    <constraint>p4>p3</constraint>
    </constraints>
    <weights>
        <weight>k1:0.2</weight>
        <weight>k2:0.2</weight>
        <weight>k3:0.2</weight>
        <weight>p3:0.1</weight>
        <weight>p2:0.1</weight>
        <weight>p4:0.1</weight>
        <weight>p1:0.1</weight>
    </weights>
    <config>
        <N_TRIES>100</N_TRIES>
        <ITERS_FIXED_T>200</ITERS_FIXED_T>
        <STEP_SIZE>1.0</STEP_SIZE>
        <K>1.0</K>
        <T_INITIAL>0.008</T_INITIAL>
        <MU_T>1.01</MU_T>
        <T_MIN>0.001</T_MIN>
    </config>
</input>

