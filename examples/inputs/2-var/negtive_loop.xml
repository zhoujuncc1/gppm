<!-- Only constraint is optional-->
<!-- Miner can be single or cluster-->
<input>
    <miner>single</miner>
    <prds>
        <prd>p1:7::</prd>
        <prd>p2:7::</prd>
        <prd>p3:7::</prd>
        <prd>p4:9:1:INFINITY</prd>
    </prds>
    <bltls>
        <bltl>p1</bltl>
        <bltl>F[k1](p2 & F[k2]p3)</bltl>
